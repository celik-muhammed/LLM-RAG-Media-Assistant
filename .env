######################################################################
# Application
######################################################################
APP_PORT=5000

# (Optional) Timezone (default: UTC)
# Default: UTC, but you can set your local zone for logs
# Timezone from https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
# TZ=America/Edmonton
# TZ=Europe/Berlin
TZ=Europe/Istanbul
RUN_TIMEZONE_CHECK=0

######################################################################
# Data
######################################################################
DATA_PATH=Data/documents-with-ids.json

######################################################################
# PostgreSQL Configuration
######################################################################
POSTGRES_DB=media_assistant
# POSTGRES_HOST=localhost
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
# SCHEMA=public
# ANON=web_anon
# AUTHENTICATOR=authenticator

######################################################################
# Grafana Configuration
# https://grafana.com/docs/grafana/latest/setup-grafana/configure-docker/
######################################################################
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_SECRET_KEY=SECRET_KEY

######################################################################
# Ollama
######################################################################
# OLLAMA_API_BASE=http://localhost:11434
# OLLAMA_HOST=localhost
# OLLAMA_PORT=11434
OLLAMA_URL=http://ollama:11434/v1/
LLM_MODEL=phi3
# Example alternative model:
# LLM_MODEL=openai/gpt-oss-120b:fireworks-ai

######################################################################
# API Keys (Optional)
######################################################################
# OPENAI_API_KEY=YOUR_KEY
# HF_TOKEN=YOUR_KEY

